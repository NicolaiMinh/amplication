{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@app/custom-validators": ["src/validators"],
      "@app/kafka": [
        "../../libs/kafka/src"
      ],
      "@app/kafka/*": [
        "../../libs/kafka/src/*"
      ],
      "@app/logging": [
        "../../libs/logging/src"
      ],
      "@app/logging/*": [
        "../../libs/logging/src/*"
      ]
    }
  },
  "include": ["src"]
}